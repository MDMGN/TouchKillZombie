<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/black">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameUser"
            android:id="@+id/nameUser"
            android:textSize="50sp"
            android:textColor="@color/red"
            android:gravity="center"></TextView>
        <!--<ImageView
            android:id="@+id/imgpf"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/imgpf"
            android:contentDescription="@string/img_desccription"
            android:visibility="gone"/>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/soldado"
            android:id="@+id/imgProfile"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point_record"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:id="@+id/recordText"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zombies"
            android:id="@+id/recorUser"
            android:textColor="@color/red"
            android:textSize="25sp"></TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/btnPlay"
            android:textSize="20sp"
            android:id="@+id/btnPlay"
            android:backgroundTint="@color/zombie"
            app:cornerRadius="30dp"
            android:padding="12dp"
            android:textColor="@color/red"
            tools:targetApi="lollipop"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/btn_recordall"
            android:textSize="20sp"
            android:id="@+id/btnRecordall"
            android:backgroundTint="@color/zombie"
            app:cornerRadius="30dp"
            android:padding="12dp"
            android:textColor="@color/red"
            tools:targetApi="lollipop"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/btn_info"
            android:textSize="20sp"
            android:id="@+id/btnInfo"
            android:backgroundTint="@color/zombie"
            app:cornerRadius="30dp"
            android:padding="12dp"
            android:textColor="@color/red"
            tools:targetApi="lollipop"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/btn_singout"
            android:textSize="20sp"
            android:id="@+id/btnSingOut"
            android:backgroundTint="@color/zombie"
            app:cornerRadius="30dp"
            android:padding="12dp"
            android:textColor="@color/red"
            tools:targetApi="lollipop"></Button>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>